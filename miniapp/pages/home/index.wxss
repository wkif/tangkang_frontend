.app {
  margin-bottom: 80px;
}
.app .saerchView .resList {
  margin-top: 70rpx;
}
.app .currentDataView {
  margin-left: 10px;
  margin-right: 10px;
  padding: 10px;
  background-color: #aed6db;
  background-image: linear-gradient(180deg, #F7CE68 0%, #aed6db 1%, #ffffff 100%);
}
.app .currentDataView .iconImg {
  width: 100px;
  float: right;
  transform: translateY(-40px);
}
.app .currentDataView .lastTag {
  margin-bottom: 10px;
}
.app .currentDataView .dateView {
  padding-top: 10vh;
}
.app .currentDataView .dateView .svg_icon {
  margin-left: 50%;
  transform: translateX(-50%);
}
.app .currentDataView .dateView .month {
  font-size: calc(20px + 0.5 * (1rem - 16px));
  margin-left: 40px;
  transform: translateY(-100%);
}
.app .currentDataView .dateView .day {
  font-size: calc(40px + 0.5 * (1rem - 16px));
  color: orange;
}
.app .currentDataView .last {
  transform: translateY(-15%);
}
.app .currentDataView .last .data {
  display: flex;
  justify-content: end;
}
.app .currentDataView .last .data .bloodSugarLevel {
  font-size: calc(30px + 0.5 * (1rem - 16px));
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
}
.app .currentDataView .last .data .unit {
  padding-top: 40%;
}
.app .currentDataView .last .tagView {
  display: flex;
}
.app .currentDataView .noData {
  padding-top: 5vh;
}
.app .cu-list {
  margin-left: 10px;
  margin-right: 10px;
}
.app .cu-list .svg_icon {
  margin-left: 50%;
  transform: translateX(-50%);
}
.app .newsList {
  padding-bottom: 10vh;
}
.app .newsList .article .content {
  display: flex;
  justify-content: space-between;
}
.app .newsList .article .content .text-content {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  /*设置超出3行进行隐藏*/
}
.app text-red {
  color: red;
}
