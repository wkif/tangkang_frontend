}
.app .inteCard .card .jfImg {
  width: 40px;
  transform: translateY(10px);
}
.app .inteCard .card .integralNum {
  font-size: calc(30px + 0.5 * (1rem - 16px));
  color: #fff;
  font-weight: bold;
}
.app .inteCard .card .tracking-in-expand {
  -webkit-animation: tracking-in-expand 0.7s cubic-bezier(0.215, 0.61, 0.355, 1) both;
  animation: tracking-in-expand 0.7s cubic-bezier(0.215, 0.61, 0.355, 1) both;
}
@-webkit-keyframes tracking-in-expand {
  0% {
    letter-spacing: -0.5em;
    opacity: 0;
  }
  40% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}
@keyframes tracking-in-expand {
  0% {
    letter-spacing: -0.5em;
    opacity: 0;
  }
  40% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}
.app .inteCard .card-right {
  background: linear-gradient(135deg, #b1ea4d 0%, #459522 100%);
  width: 3%;
  height: 10vh;
  margin-left: 10px;
  border-radius: 12px 0px 0px 12px;
}
.app .historyList {
  margin-top: 40px;
}
.app .historyList .history {
  height: 60px;
  display: flex;
  padding-left: 20px;
  padding-right: 20px;
  flex-direction: row;
}
.app .historyList .history .history-left {
  flex: 3;
}
.app .historyList .history .history-left .time {
  margin-top: 10px;
}
.app .historyList .history .history-left .time .history-time {
  color: #817ac8;
}
.app .historyList .history .history-integral {
  flex: 1;
  text-align: right;
  font-size: calc(30px + 0.5 * (1rem - 16px));
  color: #ffad45;
  font-weight: bold;
  margin-right: 20px;
}
