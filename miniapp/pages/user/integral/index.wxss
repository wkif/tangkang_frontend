.app {
  margin-top: 12vh;
}
.app .inteCard {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.app .inteCard .card-left {
  background: linear-gradient(135deg, #13f1fc 0%, #0470dc 100%);
  width: 3%;
  height: 10vh;
  margin-right: 10px;
  border-radius: 0px 12px 12px 0px;
}
.app .inteCard .card {
  background: linear-gradient(135deg, #ff9c49 0%, #ffb643 100%);
  height: 10vh;
  width: 90%;
  border-radius: 12px;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  -webkit-box-shadow: 32px 63px 114px 6px rgba(62, 66, 66, 0.24);
  -moz-box-shadow: 32px 63px 114px 6px rgba(62, 66, 66, 0.24);
