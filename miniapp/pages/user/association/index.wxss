.list {
  padding: 2rem;
}
.list .item {
  padding: 1rem;
  border-radius: 1.25rem;
  box-shadow: 3.6px 5.5px 2.4px rgba(0, 0, 0, 0.019), 8.6px 13.2px 5.9px rgba(0, 0, 0, 0.027), 16.2px 24.8px 11px rgba(0, 0, 0, 0.033), 28.8px 44.2px 19.7px rgba(0, 0, 0, 0.04), 53.9px 82.7px 36.8px rgba(0, 0, 0, 0.048), 129px 198px 88px rgba(0, 0, 0, 0.07);
  text-align: center;
}
.list .item .avatarView {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.list .item .avatarView .user {
  text-align: center;
}
.list .item .avatarView .user .avatar {
  width: 4rem;
}
.list .item .avatarView .user .username {
  font-size: large;
}
.list .item .timeView {
  text-align: center;
  padding: 1rem;
  color: white;
  margin-top: 10px;
}
